<% if (success && success.length > 0) {%>
    <div class="alert alert-secondary mt-2 alert-dismissible fade show col-6 offset-3" role="alert">
        <h4><%= success %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>    

<% if (error && error.length > 0) {%>
    <div class="alert alert-danger mt-2 alert-dismissible fade show col-6 offset-3" role="alert">
        <h4><%= error %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>    