<% layout("/layouts/bolierplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Your listing</h2>
          <form method="post" action="/listings/<%= Listing._id %>?_method=PUT" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input required class="form-control" type="text" placeholder="Enter title" name="listing[title]" value="<%= Listing.title %>">
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea required class="form-control" name="listing[description]" placeholder="Enter Description" ><%= Listing.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL/link</label>
                <input class="form-control" type="text" name="listing[image][url]" placeholder="Enter image URL/Link" value="<%= Listing.image.url %>">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input required class="form-control" type="number" name="listing[price]" placeholder="Enter Price" value="<%= Listing.price %>">
                    <div class="invalid-feedback">Please enter valid price !</div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="Location" class="form-label">Location</label>
                    <input required class="form-control" type="text" placeholder="Enter Location" name="listing[location]" value="<%= Listing.location %>">
                    <div class="invalid-feedback">Please enter valid location !</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input required class="form-control" type="text" placeholder="Enter Country" name="listing[country]" value="<%= Listing.country %>">
                <div class="invalid-feedback">Please enter valid Country !</div>
            </div> 
         
            <button class="btn btn-dark edit-btn mt-1 mb-2">Edit</button>
         </form>
        </div>
    </div>
    
</body>
</html>